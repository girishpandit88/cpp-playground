{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make all",
            "options": {
                "cwd": "${workspaceFolder}/interview-questions" // Specify your Makefile directory here
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/interview-questions" // Specify your Makefile directory here
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/interview-questions/bin/mapred", // Replace with the path to your executable
            "dependsOn": "build", // Ensures the build task runs before this task
            "options": {
                "cwd": "${workspaceFolder}/interview-questions" // Specify the directory for running the program
            }
        }
    ]
}
